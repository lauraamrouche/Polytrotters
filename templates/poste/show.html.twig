{% extends 'base.html.twig' %}

{% block title %} Poste {% endblock %}

{% block body %}

<div class="container">
    <div class="jumbotron mt-3">
        <h1 class="display-3">{{poste.titre}} </h1>
        <p class="lead">{{poste.ville}}</p>
        <hr class="my-4">




        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                {% for i in 0..2 %}
                <li data-target="#carouselExampleIndicators" data-slide-to="{{i}}" {% if loop.first %} class="active">
                    {% endif %}</li>

                {% endfor %}
            </ol>
            <div class="carousel-inner">
                {% for i in 0..2 %}
                <div class="carousel-item {% if loop.first %}  active {% endif %}">
                    <img class="d-block w-100"
                        src="https://www.voyageavecnous.fr/wp-content/uploads/2015/01/plage-paradisiaque-image.jpg"
                        alt="First slide">
                </div>
                {% endfor %}
                
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <p>{{poste.description}} </p>
        <p class="lead">
            <a class="btn btn-primary btn-lg" href="#" role="button">Ajouter un commentaire</a>
        </p>
    </div>
</div>


{% endblock %}